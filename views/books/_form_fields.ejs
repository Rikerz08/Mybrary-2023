<div>
  <label for="">Title</label>
  <input type="text" name="title" value="<%= book.title %>" />
</div>
<div>
  <label for="">Author</label>
  <select name="author">
    <% authors.forEach((author) => { %>
    <% if (author.id == book.author){ %>
    <option
      selected
      label="<%= author.name %>"
      value="<%= author.id %>"
    ></option>
    <% } else { %>
    <option label="<%= author.name %>" value="<%= author.id %>"></option>
    <% } %>
    <% console.log(author.id + " " + book.author + " " + author.name)}) %>
  </select>
</div>
<div>
  <label for="">Publish Date</label>
  <input
    type="date"
    name="publishDate"
    value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0]%>"
  />
  <!-- ? is like a if statement meaning if statement is true do something after the "?" and ":" is the else -->
</div>
<div>
  <label for="">Page Count</label>
  <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>" />
  <!-- ? is like a if statement meaning if statement is true do something after the "?" and ":" is the else -->
</div>
<div>
  <label for="">Cover</label>
  <input type="file" name="cover" />
  <!-- ? is like a if statement meaning if statement is true do something after the "?" and ":" is the else -->
</div>
<div>
  <label for="">Description</label>
  <textarea name="description"><%= book.description %></textarea>
  <!-- ? is like a if statement meaning if statement is true do something after the "?" and ":" is the else -->
</div>
